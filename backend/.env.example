# Backend Environment Variables Template
# Copy this file to local.settings.json and fill in the values

# Azure Functions
AzureWebJobsStorage=
FUNCTIONS_WORKER_RUNTIME=node

# Cosmos DB
COSMOS_ENDPOINT=https://YOUR-COSMOS-ACCOUNT.documents.azure.com:443/
COSMOS_KEY=
COSMOS_DATABASE_ID=kirana-dev

# Azure Blob Storage
BLOB_CONNECTION_STRING=
BLOB_CONTAINER_RECEIPTS=receipts
BLOB_CONTAINER_CSV=csv-imports
BLOB_CONTAINER_EMAILS=email-attachments

# Gemini API
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-exp

# Microsoft Entra ID
ENTRA_TENANT_ID=
ENTRA_CLIENT_ID=
ENTRA_CLIENT_SECRET=

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=

# LLM Cost Controls
LLM_COST_PER_USER_MONTHLY=0.20
LLM_COST_SYSTEM_DAILY=50.00
LLM_COST_PER_1K_INPUT_TOKENS=0.00001875
LLM_COST_PER_1K_OUTPUT_TOKENS=0.000075

# Cache & Sync
CACHE_TTL_SECONDS=7776000
SYNC_INTERVAL_MINUTES=10
