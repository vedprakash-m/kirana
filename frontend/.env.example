# Frontend Environment Variables Template
# Copy this file to .env.local and fill in the values

# API Configuration
VITE_API_BASE_URL=http://localhost:7071/api

# Microsoft Entra ID (OAuth)
VITE_ENTRA_CLIENT_ID=
VITE_ENTRA_TENANT_ID=
VITE_ENTRA_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_ENTRA_AUTHORITY=https://login.microsoftonline.com/

# Feature Flags
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_PHOTO_OCR=true
VITE_ENABLE_EMAIL_FORWARD=false
VITE_ENABLE_LLM=false

# App Configuration
VITE_APP_NAME=Kirana
VITE_APP_VERSION=1.0.0
VITE_ENV=development
